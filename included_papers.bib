@article{ ISI:000456579300082,
Author = {Shin, Jongho and Baek, Youngmi and Lee, Jaeseong and Lee, Seonghun},
Title = {{Cyber-Physical Attack Detection and Recovery Based on RNN in Automotive
   Brake Systems}},
