@article{ ISI:000474628100058,
Author = {Zhang, Fan and Kodituwakku, Hansaka Angel Dias Edirisinghe and Hines, J.
   Wesley and Coble, Jamie},
Title = {{Multilayer Data-Driven Cyber-Attack Detection System for Industrial
